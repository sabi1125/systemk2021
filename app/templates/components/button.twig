{% block button %}
    <button type="submit" value={{ value }} name={{ name }}  class="btn">{{ id }}</button>
{% endblock %}

<style>
.btn {
    width: 150px;
    background-color:coral;
    color:white;
    padding:15px;
    border-radius: 5px;
    box-shadow: 1px 2px 2px rgba(0,0,0,0.5);
    border: none;
    margin:0 auto;
    cursor:pointer;
    transition:0.5s ease-in-out;
}

 .btn:hover{
    box-shadow: 0px 0px 0px rgba(0,0,0,0);
 }
</style>